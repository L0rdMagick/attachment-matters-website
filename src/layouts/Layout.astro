---
// src/layouts/Layout.astro
export interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-brand-sand text-brand-gray font-body">
        <header class="bg-white shadow-md">
            <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
                <a href="/" class="text-xl font-bold text-brand-deep-purple">Attachment Matters, LLC</a>
                <ul class="flex space-x-6">
                    <li><a href="/" class="hover:text-brand-rust">Home</a></li>
                    <li><a href="/about" class="hover:text-brand-rust">About Me</a></li>
                    <li><a href="/services" class="hover:text-brand-rust">Services</a></li>
                    <li><a href="/contact" class="hover:text-brand-rust">Contact</a></li>
                </ul>
            </nav>
        </header>

		<main>
			<slot />
		</main>

        <footer class="bg-brand-deep-purple text-white mt-12">
            <div class="container mx-auto px-6 py-8 text-center">
                <p>&copy; {new Date().getFullYear()} Attachment Matters, LLC. All rights reserved.</p>
                <p class="mt-2">"Therapeutic interventions that move at the speed of trust"</p>
                <p class="mt-4">
                    <a href="tel:505-920-6351" class="font-bold text-lg hover:underline">(505) 920-6351</a>
                </p>
            </div>
        </footer>
	</body>
</html>