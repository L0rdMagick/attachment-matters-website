---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="Family Trust Therapy | Expert Child and Family Therapy" 
	description="Premiere therapeutic services for children and families. Specializing in attachment-focused, trauma-responsive care to build connection and hope.">

	<!-- HERO SECTION -->
	<section class="container mx-auto px-6 pt-16">
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<!-- Left Column: Logo and Title -->
			<div class="flex flex-col items-center text-center">
				<img src="/images/logo-hero.png" alt="Family Trust Therapy Logo" class="w-56 h-56">
				<h1 class="text-4xl font-serif font-bold text-brand-ink mt-6">Family Trust Therapy</h1>
			</div>
			<!-- Right Column: Hero Image -->
			<div>
				<img src="/images/hero-connection.png" alt="A warm, candid moment showing connection between a parent and child." class="rounded-3xl shadow-2xl w-full h-full object-cover">
			</div>
		</div>
	</section>

	<!-- CONTENT CARD SECTION -->
	<section class="container mx-auto px-6 pt-24">
		<div class="bg-white rounded-3xl p-12 border border-brand-sandstone shadow-xl text-center max-w-4xl mx-auto">
			<h2 class="text-4xl md:text-5xl font-serif font-bold text-brand-ink leading-tight">
				Therapy that builds connection and trust.
			</h2>
			<p class="mt-6 text-xl text-brand-ink/80 max-w-2xl mx-auto">
				A warm, compassionate, and highly skilled practice dedicated to helping your family build stronger bonds and navigate challenges with confidence.
			</p>
			<a href="/contact" class="mt-10 inline-block bg-brand-terracotta text-white font-bold text-lg py-4 px-10 rounded-full shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all">
				Book a Consultation
			</a>
		</div>
	</section>

	<!-- QUOTE SECTION -->
	<!-- CHANGE: Changed class to pt-24 and pb-24. This adds the required bottom padding. -->
	<section class="container mx-auto px-6 pt-24 pb-24">
		<div class="bg-white rounded-3xl p-12 border border-brand-sandstone shadow-xl flex flex-col md:flex-row gap-12 items-center max-w-5xl mx-auto">
			<!-- Image Column -->
			<div class="md:w-1/4 flex-shrink-0 text-center">
				<img src="/images/headshot-circle.jpg" alt="Headshot of the therapist" class="w-40 h-40 rounded-full mx-auto shadow-md">
				<p class="mt-4 font-bold font-serif text-brand-ink">Genevieve Giddings, LCSW</p>
				<p class="text-sm text-brand-ink/60 leading-tight">Founder,<br>Family Trust Therapy</p>
			</div>
			<!-- Quote Column -->
			<div class="relative w-full">
				<span class="absolute -top-6 -left-4 text-8xl font-serif text-brand-sandstone opacity-50 z-0">â€œ</span>
				<p class="relative z-10 text-2xl font-serif text-brand-ink/90 leading-relaxed">
					I am a highly compassionate and skilled professional dedicated to family healing through focused, effective interventions. My goal is to help your family dramatically strengthen the connections you share with each other.
				</p>
			</div>
		</div>
	</section>

	<!-- FEATURES SECTION -->
	<!-- CHANGE: Changed class to pb-24. Removed top padding to avoid doubling the space. -->
	<section class="bg-brand-sandstone pb-24">
		<div class="container mx-auto px-6 text-center">
			<h2 class="text-3xl font-serif font-bold text-brand-ink">A Child-Centered, Family-Focused Approach</h2>
			<div class="mt-12 grid md:grid-cols-3 gap-12 max-w-5xl mx-auto">
				<div>
					<h3 class="text-2xl font-serif text-brand-moss">Attachment-Focused</h3>
					<p class="mt-2 text-brand-ink/80">Strengthening the parent-child bond is at the heart of everything we do.</p>
				</div>
				<div>
					<h3 class="text-2xl font-serif text-brand-moss">Trauma-Responsive</h3>
					<p class="mt-2 text-brand-ink/80">Creating a safe space that acknowledges and honors past experiences.</p>
				</div>
				<div>
					<h3 class="text-serif text-2xl font-bold text-brand-moss">Evidence-Based</h3>
					<p class="mt-2 text-brand-ink/80">Utilizing proven therapeutic models to ensure the highest quality of care.</p>
				</div>
			</div>
		</div>
	</section>
</Layout>