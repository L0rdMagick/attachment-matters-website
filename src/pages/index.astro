---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="Attachment Matters, LLC | Expert Child and Family Therapy" 
	description="Premiere therapeutic services for children and families. Specializing in attachment-focused, trauma-responsive care to build connection and hope.">

	<!-- Hero Section -->
	<section class="container mx-auto px-6 pt-16 pb-24">
		<div class="grid md:grid-cols-2 gap-12 items-center">
			<div>
				<h1 class="text-5xl md:text-6xl font-serif font-bold text-brand-ink leading-tight">
					Therapy that builds connection and trust.
				</h1>
				<p class="mt-8 text-xl text-brand-ink/80">
					A warm, compassionate, and highly skilled practice dedicated to helping your family build stronger bonds and navigate challenges with confidence.
				</p>
				<a href="/contact" class="mt-10 inline-block bg-brand-terracotta text-white font-bold text-lg py-4 px-10 rounded-full shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all">
					Book a Consultation
				</a>
			</div>
			<div>
				<img src="/images/hero-connection.jpg" alt="A warm, candid moment showing connection between a parent and child." class="rounded-3xl shadow-2xl w-full h-full object-cover">
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="bg-brand-sandstone py-24">
		<div class="container mx-auto px-6 text-center">
			<h2 class="text-3xl font-serif font-bold text-brand-ink">A Child-Centered, Family-Focused Approach</h2>
			<div class="mt-12 grid md:grid-cols-3 gap-12 max-w-5xl mx-auto">
				<div>
					<h3 class="text-2xl font-serif text-brand-moss">Attachment-Focused</h3>
					<p class="mt-2 text-brand-ink/80">Strengthening the parent-child bond is at the heart of everything we do.</p>
				</div>
				<div>
					<h3 class="text-2xl font-serif text-brand-moss">Trauma-Responsive</h3>
					<p class="mt-2 text-brand-ink/80">Creating a safe space that acknowledges and honors past experiences.</p>
				</div>
				<div>
					<h3 class="text-2xl font-serif text-brand-moss">Evidence-Based</h3>
					<p class="mt-2 text-brand-ink/80">Utilizing proven therapeutic models to ensure the highest quality of care.</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Final Call to Action Block -->
	<section class="container mx-auto px-6 py-24">
		<div class="bg-brand-moss text-white rounded-3xl p-12 md:p-20 text-center">
			<h2 class="text-3xl md:text-4xl font-serif font-bold">Your family deserves to feel safe, seen, and hopeful.</h2>
			<p class="mt-4 max-w-2xl mx-auto text-white/80">Let's work together to build a more connected and resilient future for your children.</p>
			<a href="/contact" class="mt-8 inline-block bg-white text-brand-moss font-bold text-lg py-4 px-10 rounded-full shadow-lg hover:scale-105 transition-transform">
				Get Started Today
			</a>
		</div>
	</section>
</Layout>